@model List<_Models.EF.OrderDetail>
@{
    /**/

    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/all.css" rel="stylesheet" />
<style type="text/css">
    .dropdow {
        padding: 5px;
        font-size: 18px;
        outline: none;
        outline-color: none;
    }

    .canle {
        padding: 8px 12px;
    }

    .progress-info-division {
        
        position: relative;
        width: 600px;
        margin: auto;
        margin-top: 20px;
    }

    .progress-bar {
        margin-bottom: 16px;
    }

    .next-step-dot {
        padding: 4px 0 0;
    }

    .next-step-horizontal {
        display: -ms-flexbox;
        display: flex;
    }

    .next-step {
        width: 100%;
        overflow: hidden;
        position: relative;
        border: none;
    }

        .next-step, .next-step *, .next-step :after, .next-step :before {
            box-sizing: border-box;
        }

    .next-step {
        color: #212121;
        font-family: Roboto,Helvetica Neue,Helvetica,Tahoma,Arial,Sans-serif;
        font-size: 14px;
        line-height: 1.28571;
    }

    .next-step-horizontal > .next-step-item {
        display: inline-block;
        text-align: center;
    }

    .next-step-item {
        -ms-flex: 1;
        flex: 1;
        position: relative;
        vertical-align: top;
    }

    .next-step, .next-step *, .next-step :after, .next-step :before {
        box-sizing: border-box;
    }

        .next-step, .next-step *, .next-step :after, .next-step :before {
            box-sizing: border-box;
        }

            .next-step, .next-step *, .next-step :after, .next-step :before {
                box-sizing: border-box;
            }

    .next-step-dot.next-step-horizontal > .next-step-item .next-step-item-tail {
        position: absolute;
        width: calc(100% - 16px);
        height: auto;
        left: calc(50% + 8px);
        top: 6px;
    }

    .next-step-item-tail {
        top: 5px !important;
    }

    .next-step-dot.next-step-horizontal > .next-step-item .next-step-item-tail .next-step-item-tail-underlay {
        height: 4px;
        position: relative;
        transition: all .4s ease;
    }

    .next-step-dot > .next-step-item-finish .next-step-item-tail-underlay {
        background: #ccc;
    }

    .next-step-dot.next-step-horizontal > .next-step-item .next-step-item-tail .next-step-item-tail-overlay {
        position: absolute;
        top: 0;
        height: 4px;
    }

    .next-step-dot > .next-step-item-finish .next-step-item-tail-overlay {
        background: #4caf50;
    }

    .next-step {
        color: #212121;
        font-family: Roboto,Helvetica Neue,Helvetica,Tahoma,Arial,Sans-serif;
        font-size: 14px;
        line-height: 1.28571;
    }

    .next-step-dot.next-step-horizontal > .next-step-item .next-step-item-container > .next-step-item-node {
        width: 16px;
        height: 16px;
        padding: 0;
        line-height: 16px;
    }

    .next-step-dot > .next-step-item-finish > .next-step-item-container .next-step-item-node {
        color: #4caf50;
    }

    .next-step-dot .next-step-item-container .next-step-item-node {
        position: relative;
        display: inline-block;
        text-align: center;
        cursor: pointer;
    }

    .next-step-item-node {
        transition: all .2s ease;
    }

    .next-step-dot > .next-step-item-finish > .next-step-item-container .next-step-item-node {
        color: rgb(76, 175, 80);
    }

    .next-step-item-node-dot {
        border: 1px solid black;
    }

    .next-step-dot > .next-step-item-finish > .next-step-item-container .next-step-item-node-circle, .next-step-dot > .next-step-item-finish > .next-step-item-container .next-step-item-node-dot {
        background: rgb(76, 175, 80);
        border-color: rgb(76, 175, 80);
    }

    .next-step-dot .next-step-item-container .next-step-item-node-dot {
        position: absolute;
        top: 50%;
        margin-top: -8px;
        left: 50%;
        margin-left: -8px;
        display: block;
        width: 16px;
        height: 16px;
        border-width: 4px;
        border-style: solid;
        border-color: initial;
        border-image: initial;
        border-radius: 50%;
        transition: background-color 0.3s ease 0s, border-color 0.3s ease 0s;
    }

    .next-step, .next-step *, .next-step ::after, .next-step ::before {
        box-sizing: border-box;
    }
    .khoangcachchu{
        margin-top:5px;
        margin-bottom:5px;
    }
</style>
@section slide{
    @using (Html.BeginForm("Information", "Home", Model, FormMethod.Post))
    {
        var customer = ViewBag.customer as _Models.EF.CustomerAccount;
        var order = ViewBag.order as _Models.EF.Order;
        int tempindex = 0;
        if (TempData["msg"] != null)
        {
            @Html.Raw(TempData["msg"]);
        }
        <div class="header_slide">
            <div class="header_bottom_left">
                <div class="categories">
                    @{Html.RenderAction("OptionAccount", "Home");}

                </div>
            </div>
            <div class="header_bottom_right">
                <h3 style="font-size:28px;margin-top:15px;margin-bottom:15px;">
                    Chi tiết hóa đơn
                </h3>
                <div style="background:white;padding:8px 12px;margin-bottom:15px;">
                    <div style="float:left">
                        Hóa đơn #@order.OrderID
                        <p style="color:#9e9e9e">
                            Đặt vào ngày @order.CreateDay
                        </p>
                    </div>
                    <div style="float:right;font-size:20px">
                        <span style="color:#9e9e9e">Tổng Tiền:</span> @ViewBag.tong
                    </div>
                    <div class="clear"></div>
                </div>
                @foreach (var item in Model)
                {
                    tempindex++;
                    <div style="background:white;margin-bottom:15px;">
                        <div class="canle">
                            <span>
                                <i class="fas fa-archive" style="font-size:25px"></i>
                                Gói @tempindex
                            </span>
                            <p>Bán bởi <span style="color:#65b6f1;font-weight:bold">H&H&T</span></p>
                        </div>
                        <hr style="border:1px solid #66a3cf;margin-top:15px;margin-bottom:15px;">
                        <div class="canle">
                            @if (item.Trangthaigiao == true)
                            {
                                <div style="float:left">Nhận ngày @item.NgayGiao</div>
                                <div style="float:right">Loại Hình Giao ShipCode</div>
                            }
                            else
                            {
                                <div style="float:left">Chưa Nhận</div>
                                <div style="float:right">Loại Hình Giao ShipCode</div>

                            }
                            <div class="clear"></div>
                            @if (item.Trangthaithanhtoan == true)
                            {
                                <div class="progress-info-division">
                                    <div class="next-step next-step-dot next-step-horizontal progress-bar">
                                        <div class="next-step-item next-step-item-finish next-step-item-first" style="width: auto;">
                                            <div class="next-step-item-tail">
                                                <div class="next-step-item-tail-underlay">
                                                    <div class="next-step-item-tail-overlay" style="width: 100%;">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="next-step-item-container" data-spm-anchor-id="a2o4n.order_details.0.i1.79a75d0aM4z9mW"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Đã Xử Lí</div></div>
                                        </div><div class="next-step-item next-step-item-finish" style="width: auto;"><div class="next-step-item-tail"><div class="next-step-item-tail-underlay"><div class="next-step-item-tail-overlay" style="width: 100%;"></div></div></div><div class="next-step-item-container"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Đã Giao</div></div></div><div class="next-step-item next-step-item-process next-step-item-last" style="width: auto;"><div class="next-step-item-tail"><div class="next-step-item-tail-underlay"><div class="next-step-item-tail-overlay"></div></div></div><div class="next-step-item-container"><div class="next-step-item-node"><span class="next-step-item-node-dot" style="background: rgb(76, 175, 80);border-color: rgb(76, 175, 80);"></span></div><div class="next-step-item-title">Đã Nhận</div></div></div>
                                    </div>
                                </div>
                            }
                            @if (item.Trangthaidanggiao == true&&item.Trangthaithanhtoan!=true)
                            {
                                <div class="progress-info-division">
                                    <div class="next-step next-step-dot next-step-horizontal progress-bar">
                                        <div class="next-step-item next-step-item-finish next-step-item-first" style="width: auto;">
                                            <div class="next-step-item-tail">
                                                <div class="next-step-item-tail-underlay">
                                                    <div class="next-step-item-tail-overlay" style="width: 100%;">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="next-step-item-container" data-spm-anchor-id="a2o4n.order_details.0.i1.79a75d0aM4z9mW"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Đã Xử Lí</div></div>
                                        </div>
                                        <div class="next-step-item next-step-item-process next-step-item-last" style="width: auto;">
                                            <div class="next-step-item-tail">
                                                <div class="next-step-item-tail-underlay">
                                                    <div class="next-step-item-tail-overlay" style="width: 100%;"></div>
                                                </div>
                                            </div><div class="next-step-item-container"><div class="next-step-item-node"><span class="next-step-item-node-dot" style="background: #4caf50;border-color: #4caf50;"></span></div><div class="next-step-item-title">Đang Giao</div></div>
                                        </div>
                                        <div class="next-step-item next-step-item-process next-step-item-last" style="width: auto;"><div class="next-step-item-tail"><div class="next-step-item-tail-underlay"><div class="next-step-item-tail-overlay"></div></div></div><div class="next-step-item-container"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Chưa Nhận</div></div></div>
                                    </div>
                                </div>
                            }
                            @if (item.Trangthaixuli == true&&item.Trangthaidanggiao!=true&&item.Trangthaigiao!=true)
                            {
                                <div class="progress-info-division">
                                    <div class="next-step next-step-dot next-step-horizontal progress-bar">
                                        <div class="next-step-item next-step-item-finish next-step-item-first" style="width: auto;">
                                            <div class="next-step-item-tail">
                                                <div class="next-step-item-tail-underlay">
                                                    <div class="next-step-item-tail-overlay" style="width: 100%;">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="next-step-item-container" data-spm-anchor-id="a2o4n.order_details.0.i1.79a75d0aM4z9mW"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Đang Xử Lí</div></div>
                                        </div>
                                        <div class="next-step-item next-step-item-process next-step-item-last" style="width: auto;">
                                            <div class="next-step-item-tail">
                                                <div class="next-step-item-tail-underlay">
                                                    <div class="next-step-item-tail-overlay" style="width: 100%;"></div>
                                                </div>
                                            </div><div class="next-step-item-container"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Chờ Ship</div></div>
                                        </div>
                                        <div class="next-step-item next-step-item-process next-step-item-last" style="width: auto;"><div class="next-step-item-tail"><div class="next-step-item-tail-underlay"><div class="next-step-item-tail-overlay"></div></div></div><div class="next-step-item-container"><div class="next-step-item-node"><span class="next-step-item-node-dot"></span></div><div class="next-step-item-title">Chưa Nhận</div></div></div>
                                    </div>
                                </div>
                            }
                            <div class="canle">
                                <table style="margin-top:25px;margin-bottom:15px;">
                                    <tr>
                                        <td style="width:180px;">
                                            <img src="@item.Product.Image" width="80" height="80" />
                                        </td>
                                        <td style="vertical-align:top;width:300px;padding-right:10px;">
                                            @item.Product.ProductName
                                        </td>
                                        <td style="width:200px; font-weight:bold;text-align:center;vertical-align:top">
                                            @string.Format("{0:N0} VND",item.Product.Price)
                                        </td>
                                        <td style="vertical-align:top;width:150px">
                                       <span style="color:#c9c9c9">Số lượng:</span>  @item.Quantity</td>
                                        
                                        <td style="vertical-align:top;width:200px;font-weight:bold">
                                            <span style="color:#c9c9c9">Thành Tiền:</span>  @string.Format("{0:N0} VND", item.Product.Price*item.Quantity)
                                       
                                        </td>
                                    </tr>
                                </table>
                                
                            </div>
                           
                        </div>
                    </div>
                    
                }
                <div class="" style="margin-top:25px;margin-bottom:25px;">
                    <div style="float:left;">
                        <div class="canle" style="background:white;min-height:170px;width:331px;">
                            <h3 style="font-weight:bold;font-size:20px;" class="khoangcachchu">Người nhận và thanh toán</h3>
                            <h4 class="khoangcachchu">
                                
                                Họ tên: @order.ShipName
                                
                            </h4>
                            <h4 class="khoangcachchu">@order.ShipAdress</h4>
                            <h4 class="khoangcachchu">@order.ShipEmail</h4>
                            <h4 class="khoangcachchu">Số điện thoại: @order.ShipPhone</h4>
                        </div>
                        <div class="canle" style="background:white;min-height:170px;margin-top:15px;width:331px;">
                            <h3 style="font-weight:bold;font-size:20px;" class="khoangcachchu">Người đặt ship</h3>
                            <h4 class="khoangcachchu">

                                Họ tên: @customer.Name

                            </h4>
                            <h4 class="khoangcachchu">Địa chỉ: 64/1/16 D2 quận bình thạnh</h4>
                            <h4 class="khoangcachchu">Số điện thoại: @customer.TelephoneNumber</h4>
                        </div>
                    </div>
                    <div style="float:right;min-height:370.5px;background-color:white;width:331px;" class="canle">
                        <h3 style="font-weight:bold;font-size:20px;" class="khoangcachchu">Tóm tắt tổng tiền thanh toán</h3>
                        <h4 class="khoangcachchu"><span>Tổng tiền hàng hóa:</span><span style="margin-left:40px;">@ViewBag.tong</span></h4>
                            <h4 class="khoangcachchu"><span>Phí ship</span><span style="margin-left:124px;">@string.Format("{0:N0} VND",30000)</span></h4>
                        <hr style="margin-top:20px;margin-bottom:20px;" />
                        <h3 style="font-weight:bold;" class="khoangcachchu">
                        <span>Tổng tiền(gồm VAT)</span><span style="font-weight:normal;margin-left:31px;">@string.Format("{0:N0} VND",22430000)</span></h3>

                    </div>
                    <div class="clear"></div>

                </div>
            </div>

            <div class="clear"></div>
        </div>

                        }
}