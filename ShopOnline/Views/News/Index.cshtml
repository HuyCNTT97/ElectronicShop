@using PagedList.Mvc;
@model PagedList.IPagedList<_Models.EF.Content>
@{
    ViewBag.Title = "trang tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Asset/Client/css/Category.css" rel="stylesheet" />
<link href="~/Asset/Client/css/cssKhungProDuct.css" rel="stylesheet" />
<style>

    body {
        background: #808080;
    }

    div.grid_1_of_4.images_1_of_4 {
        width: 700px;
    }
    .ol-tintuc-phai {
        padding: 2%;
        list-style: none;
        position: relative;
        padding-bottom: 10%;
    }

        .ol-tintuc-phai li:not(:last-child) {
            clear: both;
            padding-bottom: 10%;
            padding-top:5px;
            border-bottom: #dcd5d5 1px dashed;
        }

        .ol-tintuc-phai .tintuc .img-tintuc {
            max-width: 30%;
            min-width: 25%;
            float: left;
        }

            .ol-tintuc-phai .tintuc .img-tintuc img {
                height: 100px;
                width: 100%;
                margin: auto;
            }

        .ol-tintuc-phai .tintuc .title-tintuc {
            text-transform: uppercase;
            font-weight:bold;
            color:#9eadd8;
        }

        .ol-tintuc-phai .tintuc .date-tintuc {
            color: #cbc2c2;
        }

        .ol-tintuc-phai .tintuc .content-tintuc {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            margin-top: 2%;
        }
        .ol-tintuc-phai li:hover{
            -webkit-box-shadow: inset 0 0 7px #ccc;
            cursor: pointer;
        }
        .ol-tintuc-phai .tintuc .btn-tintuc {
            float: right;
            margin-top: 4%;
        }
    .btn {
    padding:5px; background-color:#e4dddd;
    border:none;
    }
        .btn:hover {
        background-color:#f18e8e;
        }
</style>
<div class="header_slide" style="background:white;">
    <div class="header_bottom_left">
        <div class="categories">
            <h2 style="text-align:center;font-size:25px;font-weight:bold;color:white;">Danh Mục Tin Tức</h2>
            @{ Html.RenderAction("ListNews", "News");}

        </div>
    </div>
    <div class="header_bottom_right" style="-webkit-box-shadow: 0px 0px 3px rgb(150, 150, 150);">
        <div style="background-color:#f8f8f8;padding:5px 0;"><a href="Trangchu.html">Trang chủ</a> >> <a href="Tintuc.html"> tin tức </a>  </div>



        <ol class="ol-tintuc-phai">
            @foreach (var item in Model)
            {
                var url = "/tin-tuc/" + item.MetaTitle + "-" + item.ContentID;

                <li>
                    <div class="tintuc">
                        <div class="img-tintuc">    <a href="@url"> <img src="@item.Image" /> </a></div>
                        <h2 class="title-tintuc"><a href="@url">@item.ContentName</a></h2>
                        <p class="date-tintuc"><img width="2%" src="~/Data/anh_ngoaile/calendar.png" alt="Alternate Text" />10/10/2005 20:22:11</p>
                        <p class="content-tintuc">@item.Description</p>
                        <button class="btn btn-tintuc pointer">
                            <a href="@url"> Chi Tiết</a>
                        </button>
                    </div>
                </li>
            }

        </ol>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { @page = page }))

    </div>

    <div class="clear"></div>
</div>








<script src="~/Asset/vendor/jquery/jquery.js"></script>
<script src="~/Scripts/bootstrap.js"></script>