<!DOCTYPE html>

<html>
<head>
    <title>Công ty H&H&H</title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/Asset/Client/css/style.css" rel="stylesheet" type="text/css" media="all">
    <link href="/Asset/Client/css/slider.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Asset/Client/css/Category.css" rel="stylesheet" />

    <script type="text/javascript" src="/Asset/Client/js/jquery-1.7.2.min.js"></script>

    <script type="text/javascript" src="/Asset/Client/js/move-top.js"></script>
    <script type="text/javascript" src="/Asset/Client/js/easing.js"></script>
    @RenderSection("csschirld", required: false)
    <script type="text/javascript" src="/Asset/Client/js/startstop-slider.js"></script>
    <link href="~/Asset/Client/css/LayoutCssClient.css" rel="stylesheet" />
    <link href="~/Asset/Client/css/modal.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <style>
        body {
            font-family:  'Roboto', Arial, sans-serif;
        }
    </style>
</head>

<body>

    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p id="lienhenong"><span>Cần giúp đỡ?</span> gọi Huy <span class="number">01234556778</span></p>
                </div>
                <div class="account_desc">
                    @{ Html.RenderAction("TopMenu", "Home");}
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/"><img src="/Data/images/Logo/Logo.png" width="100" height="71" alt="" /></a>
                </div>
                @{ Html.RenderAction("HeaderCart", "Cart");}

                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home"); }
                <div class="search_box">
                    <form action="/Product/Timkiem" method="get">
                        <input type="text" name="keysearch" id="keysearch" placeholder="nhập từ khóa...."><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
           
            </div>
            @RenderSection("slide", required: false)

        </div>
        <div class="main">
            @RenderBody()

        </div>
    </div>
    <div style="margin:0;" class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Information</h4>
                    <ul>
                        <li><a href="/gioi-thieu">giới thiệu</a></li>
                        <li><a href="/lien-he">Liên hệ chúng tôi</a></li>
                        <li><a href="#keysearch">Tìm kiếm</a></li>
                        <li><a href="/tin-tuc-tat-ca-0">tin tức</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Why buy from us</h4>
                    <ul>
                        <li><a href="gioi-thieu">giới thiệu</a></li>
                        <li><a href="#lienhenong">liên hệ nóng</a></li>
                        <li><a href="/Home/huongdanmuahang">hướng dẫn mua hàng</a></li>
                        <li><a target="_blank" href="https://www.google.com/maps">bản đồ</a></li>
                        <li><a href="/Home/giaohang_doitra">giao hàng- đổi trả</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>My account</h4>
                    <ul>
                        <li><a href="/dang-ki">đăng kí</a></li>
                        <li><a href="#" onclick="$('#myBtn').click();">đăng nhập</a></li>
                        <li><a href="/Cart">xem giỏ hàng</a></li>
                        <li><a href="/thanh-toan-gio-hang">thanh toán</a></li>
                        <li><a href="gioi-thieu">giới thiệu</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contact</h4>
                    <ul>
                        <li><span>+91-123-456789</span></li>
                        <li><span>+00-123-000000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Theo dõi chúng tôi</h4>
                        <ul>
                            <li><a href="facebook.com" target="_blank"><img src="/Asset/Client/images/facebook.png" alt="" /></a></li>
                            <li><a href="twitter.com" target="_blank"><img src="/Asset/Client/images/twitter.png" alt="" /></a></li>
                            <li><a href="skype.com" target="_blank"><img src="/Asset/Client/images/skype.png" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="/Asset/Client/images/dribbble.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="/Asset/Client/images/linkedin.png" alt="" /></a></li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy_right">
            <p>&copy; 2018 home_shoppe. All rights reserved | Design by <a href="http://w3layouts.com/">HuyHoang</a></p>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#keysearch").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Product/AutocompleteKeysearch",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.ProductName, value: item.ProductName };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        })
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>

    @RenderSection("jsFooter", required: false)
</body>
</html>
